<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_grey_900">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/advertisement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_layout_settings_advertisement_label"
            android:textColor="@color/blue_grey_500"
            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:layout_marginVertical="10dp"/>

        <TextView
            android:id="@+id/removeADSButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_layout_settings_remove_ads_button"
            android:textColor="@color/amber_800"
            android:background="@drawable/back_for_button_with_corners"
            android:textSize="18dp"
            android:layout_marginLeft="10dp" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>