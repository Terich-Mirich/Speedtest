<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/nameProvider"
            android:layout_marginVertical="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="nameProvider"
            android:textColor="@color/blue_grey_400"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/cityProvider"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />


        <TextView
            android:id="@+id/cityProvider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cityProvider"
            android:textColor="@color/blue_grey_400"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/nameProvider"
            app:layout_constraintRight_toLeftOf="@id/countryProvider"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/countryProvider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="countryProvider"
            android:textColor="@color/blue_grey_400"
            app:layout_constraintRight_toLeftOf="@id/pingProvider"
            app:layout_constraintLeft_toRightOf="@id/cityProvider"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/pingProvider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="pingProvider"
            android:textColor="@color/blue_grey_400"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/countryProvider"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>



    <View
        android:id="@+id/secondLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/blue_grey_600"
        android:layout_marginVertical="5dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</LinearLayout>







